<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
</head>
<body>
  <%- include('../partials/navbar.ejs') %>
  <h1><%= title %></h1>
  <a href="/item/new">Add new item</a>
  <table>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Price</th>
      <th>Quantity</th>
      <th></th>
    </tr>
    <% for (let i = 0; i < items.length; i++) { %>
      <tr>
        <td><%= items[i].id %></td>
        <td><%= items[i].name %></td>
        <td><%= items[i].price %></td>
        <td><%= items[i].quantity %></td>
        <td><a href="/item/<%= items[i].id %>">Item Details</a></td>
        <td>
          <form action="/item/<%= items[i].id %>/remove" method="POST">
            <button 
              type="submit" 
              onclick="return confirm('Remove <%= items[i].name %>?')"
            >
              Remove
            </button>
          </form>
        </td>
      </tr>
    <% } %>
  </table>
</body>
</html>